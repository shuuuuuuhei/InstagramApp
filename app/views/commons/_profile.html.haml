.profilePage
    .profilePage_user
        .profilePage_user_name
            = user.display_name
        .profilePage_user_image
            = image_tag user.avatar_image
        .profilePage_user_image_area.hidden
            %input(type="file" name = 'image' id='user_image_tag')
            .btn-secondary.add-user-image-btn
                アバターを更新
        .profilePage_user_action
            - if user == @user
                - if current_user&.has_followed?(@user)
                    %p= link_to 'Followed', account_unfollows_path(user), data: { method: 'post'}
                - else
                    %p= link_to 'Follow', account_follows_path(user), data: { method: 'post' }
            - else
                %p= link_to 'Edit', '#'
        .profilePage_user_basicInfo
            = link_to '#', class: 'profilePage_user_basicInfo_posts' do
                %h3 44
                %p Posts
            = link_to '#', class: 'profilePage_user_basicInfo_followers' do
                %h3= user.followers.count
                %p Followers
            = link_to '#', class: 'profilePage_user_basicInfo_following' do
                %h3= user.followings.count
                %p Following
        .profilePage_user_articles
            - user.articles.each do |article|
                .card
                    - if article.images.attached?
                        .card_image
                            - article.images.each do |image|
                                = image_tag image, :size =>'220x280'
