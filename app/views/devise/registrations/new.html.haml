.session-image
  = image_tag 'Rectangle.png', width: '100%', height: '700px'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :account
      %br/
      = f.text_field :account, class: 'text user-text-form'
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'submit-btn'
  = render "devise/shared/links"
