= link_to new_article_path do
    %i.fas.fa-camera.article-post.fa-5x
= link_to 'プロフィール', profile_path
- @articles.each do |article|
    .card
        = link_to profile_path do
            .card_user
                .card_user_image
                    = image_tag article.user.avatar_image
                .card_user_detail
                    %h3.card_user_detail_name= article.user.display_name
                    %p.card_user_detail_time 12 hours ago
        - if article.eyecatch.attached?
            = link_to article_path(article) do
                .card_image
                    = image_tag article.eyecatch
        .card_detail
            .card_heart
                = image_tag 'heart.png'
            .card_add_comment
                = image_tag 'comment.png'
            .card_add_detail
                = image_tag 'detail.png'
        = link_to article_path(article) do
            .card_content
                = article.caption
